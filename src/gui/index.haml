!!! 5
%html
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    %meta(http-equiv="x-ua-compatible" content="ie=edge")
    %link(rel="stylesheet" type="text/css" href="../node_modules/bootstrap/dist/css/bootstrap.min.css")
    %link(rel="stylesheet" type="text/css" href="css/core.css")
  %body
    .pos-f-t
      %nav.navbar.navbar-dark.navbar-static-top.bg-faded
        %form.form-inline.float-xs-left
          %a(href="./setting.html")
            %button.btn(type="button")
              %img(src="./img/wrench.svg" height="30px" width="30px")
    .container-fluid
      .row#repo
        .col-xs(v-if="remoteRepos.length > 0")
          .card.card-block
            %h4.card-title.ja リモートリポジトリ
            %h4.card-title.en Remote Repository
            %h4.card-title.ru удаленном репозитории
            %ul.list-group
              %li(is="repo" v-for="r in remoteRepos" :name="r" repotype="remote")
        .col-xs(v-if="localRepos.length > 0")
          .card.card-block
            %h4.card-title.ja ローカルリポジトリ
            %h4.card-title.en Local Repository
            %h4.card-title.ru Локальный репозиторий
            %ul.list-group
              %li(is="repo" v-for="r in localRepos" :name="r" repotype="local")
        .col-xs(v-if="debugRepo !== \"\"")
          .card.card-block
            %h4.card-title.ja デバッグ用リポジトリ
            %h4.card-title.en Debug Repository
            %h4.card-title.ru Отладка репозитария
            .card.card-block
              %debug-repo(:name="debugRepo")
      .card.card-block.card-inverse.card-info#update.hidden
        %h4.card-title.ja アップデート通知
        %h4.card-title.en Update available
        %h4.card-title.ru Доступно обновление
        %p.ja
          %span.newVersion
          へのアップデートが利用可能です
        %p.en
          %span.newVersion
           is available
        %p.ru
          %span.newVersion
           доступен
        %a.card-link#updateLink(href="#")
          %span.ja 開く
          %span.en Open
          %span.ru открыто
    %script(type="text/javascript")
      window.jQuery = window.$ = require("../node_modules/jquery/dist/jquery.min.js");
    %script(src="../node_modules/tether/dist/js/tether.min.js")
    %script(src="../node_modules/bootstrap/dist/js/bootstrap.min.js")
    %script(src="../node_modules/vue/dist/vue.min.js")
    %script(src="./js/index.js")
